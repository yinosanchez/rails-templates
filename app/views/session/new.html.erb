<%= form_tag '/login' do %>
    <div class="form-group">
        <%= label_tag :username %>
        <%= text_field_tag :username %>
    </div>
    <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password %><br />
    </div>
    <%= submit_tag "Login", class: 'btn btn-default' %>
<% end %>
